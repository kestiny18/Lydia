{
  "name": "@lydia/cli",
  "version": "0.1.0",
  "description": "Lydia Command Line Interface",
  "bin": {
    "lydia": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsup src/index.ts --format esm --clean",
    "dev": "tsup src/index.ts --format esm --watch",
