{
  "llm": {
    "provider": "auto",
    "defaultModel": "",
    "fallbackOrder": ["ollama", "openai", "anthropic"]
  },
  "mcpServers": {
    "sqlite": {
      "command": "uvx",
      "args": ["mcp-server-sqlite", "--db-path", "test.db"]
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "/path/to/allowed/dir"]
    },
    "browser": {
      "command": "npx",
      "args": ["-y", "@your-org/mcp-browser-server"]
    }
  },
  "strategy": {
    "activePath": "",
    "approvalCooldownDays": 7,
    "approvalDailyLimit": 1,
    "replayEpisodes": 10
  },
  "safety": {
    "userDataDirs": [
      "~/.lydia",
      "~/Desktop",
      "~/Documents",
      "~/Downloads"
    ],
    "systemDirs": [
      "C:\\\\Windows",
      "C:\\\\Program Files",
      "C:\\\\Program Files (x86)",
      "C:\\\\ProgramData"
    ],
    "allowPaths": [],
    "denyPaths": [],
    "rememberApprovals": true
  }
}
