    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.9",
    "hono": "^4.11.8",
    "open": "^11.0.0"
